{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@tsconfig/node-lts-strictest-esm/tsconfig.json",
    "compilerOptions": {
      "lib": ["ES2022"],
      "module": "NodeNext",
      "target": "ES2022",
      "ignoreDeprecations": "5.0",
      "esModuleInterop": true,
      "noUnusedLocals" : false,
      "noUnusedParameters" : false
    },
    "include": ["**/*", "utils/**/*"]
}